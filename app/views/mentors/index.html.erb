<div class="container mb-5">
  <div class="row">
    <div class="col-7 ">
      <h2 class="pb-1 title" style="margin-top: 56px;">Search results: <span class="emp"> <%= @searchterm %></span></h2>
      <div class="card-deck" style="width: 100%; margin: 0; display: grid; grid-template-columns: repeat(2, 1fr); grid-gap: 16px;">
        <% @mentors.each do |user| %>
          <div class="card-trip">
            <div class="p-3">
              <%= cl_image_tag user.photo.key, class: "rounded card-img shadow" %>
            </div>
            <div id="card-info" class="card-trip-infos" style="margin-top: -30px;">
              <div>
                <h1 class="pb-1" style="font-size: 20px;"><%= user.first_name %> <%= user.last_name %></h1>
                <div class="pb-2" style="height: 150px;">
                  <p><span class="font-weight-bold">Location:</span> <%= user.location %></p>
                  <p><span class="font-weight-bold">Nationality:</span> <%= user.nationality %></p>
                  <p><span class="font-weight-bold">Profession:</span> <%=  user.profession %></p>
                  <p><span class="font-weight-bold">Expertise:</span> <%= user.expertise %></p>
                  <p><span class="font-weight-bold">Fee:</span> â‚¬<%= user.price %> per hour</p>
                </div>
                <div class="d-flex justify-content-center">
                  <%= link_to "View Mentor", mentor_path(user), class: "btn c-btn", data: {turbolinks: false} %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      <div class="searchbar">
        <%= simple_form_for :search, url: mentors_path, method: :get do |f| %>
          <div class="search-form-control form-group" style="width: 100%;">
            <input class="form-control string required pl-5" type="text" name="search[query]" id="search_query" placeholder="Search Mentors" />
            <button name="button" type="submit" class="btn btn-flat d-flex justify-content-center">
              <i class="fas fa-search search-icon"></i>
            </button>
          </div>
        <% end %>
      </div>
      <div class="card-add-map">
        <div id="map"
        style="width: 100%; height: 100%; "
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>

