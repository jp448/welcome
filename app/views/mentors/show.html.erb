            <div class="row">
              <div>
               <p class="pt-4">Date</p>
               <input class="form-control string required pl-5" type="text" name="search[query]" id="search_query" placeholder="" />
             </div>
             <div>
              <p style="margin-top: 10px;">Time</p>
              <input class="form-control string required pl-5" type="text" name="search[query]" id="search_query" placeholder="" />
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <button class="c-btn"><%= link_to "Book a meeting", new_consultation_path %></button>
