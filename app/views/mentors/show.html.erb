      <div class="search-form-control form-group" style= style="margin-right:25px;margin-left: 15px; margin-bottom: 15px;">
        <input class="form-control string required pl-5" type="text" name="search[query]" id="search_query" placeholder="Search mentor" style="margin-top: 25px;" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search search-icon"></i>
        </button>
      </div>
      <% end %>

