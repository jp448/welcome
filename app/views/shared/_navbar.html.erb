<div class="navbar-homepage">
  <%= link_to root_path class: "navbar-brand" do %>
    <p class='mb-0 navbar-icon icon-w'>W</p>
    <p class='mb-0 navbar-icon icon-compass'><i class="far fa-compass"></i></p>
  <% end %>

  <ul class="navbar-homepage-links">
    <% if user_signed_in? %>
      <li class="">
        <%= link_to "mentors", mentors_path, class: "yellow-link" %>
      </li>
      <li class="">
        <%= link_to "blog", articles_path, class: "yellow-link" %>
      </li>
      <li class="nav-item dropdown">
        <!-- upload avatar -->
        <%= cl_image_tag current_user.photo.key, stylefit: :cover, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %> 
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Dashboard", dashboard_index_path, class: "dropdown-item" %>
          <%= link_to "Messages", "#", class: "dropdown-item" %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    <% else %>
      <li class="">
        <%= link_to "mentors", mentors_path, class: "yellow-link" %>
      </li>
      <li class="">
        <%= link_to "blog", articles_path, class: "yellow-link" %>
      </li>
      <li class="">
        <%= link_to "Login", new_user_session_path, class: "yellow-link" %>
      </li>
    <% end %>
  </ul>
</div>
