<div class="chatroom-container">
  <div class="message-container <%= 'right' if user_is_messages_author %>" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.username %></span>
      <% if message.user.photo.attached? %>
        <span><%= cl_image_tag message.user.photo.key, class: "sm-avatar-img" %></span>
      <% end %>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
</div>
