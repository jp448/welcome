<div class="container">
  <div class="row" style="justify-content: space-around;">
    <div class= "col-8">
      <h1 class="title mt-5">Search results: <span class="emp">Articles</span></h1>
       <div class="card-deck" style="width: 100%; margin: 0; display: grid; grid-template-columns: repeat(2, 1fr); grid-gap: 16px;">
        <% @articles.each do |article| %>
          <div class="card-article m-1">
            <div class="p-2">
              <%= cl_image_tag article.photo.key, class: "rounded shadow" %>
            </div>
          <div class="card-article-infos">
            <div>
              <div style="height: 100px;">
                <h2 class="pb-1"><%= article.title %></h2>
                <p class="lt">Written by <%= article.user.first_name %> <%= article.user.last_name %></p>
                <p class="mb-1 lt">Posted <%= article.created_at.strftime("%B %d") %></p>
              </div>
              <div style="height: 130px;">
                <p class="pb-2"><%= article.summary %></p>
              </div>
              <div class="d-flex justify-content-center">
                <button class="d-btn"><%= link_to "Read Article", article_path(article) %></button>
              </div>
            </div>
          </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <div class="searchbar">
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group" style="width: 100%;">
          <input class="form-control string required pl-5" type="text" name="search[query]" id="search_query" placeholder="Search articles" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search search-icon"></i>
          </button>
        </div>
      <% end %>
      </div>
      <div class="card-add" style="width: 100%;">
        <h2 class="pb-1 text-center">Book a <span class="emp">free</span> consultation with a mentor in <span class="emp-y">Berlin</span></h2>
        <div class="card-add-infos">
          <div class="container">
            <div class="row">
              <div>
                <img src="https://images.unsplash.com/photo-1542156822-6924d1a71ace?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=60" class="sm-img">
              </div>
              <div>
                <img src="https://images.unsplash.com/photo-1463453091185-61582044d556?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" class="sm-img">
              </div>
              <div>
