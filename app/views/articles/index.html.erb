<div class="container mt-5">
  <p><%= link_to "Add a new article", new_article_path %></p>
  <% unless @articles.empty? %>
    <ul>
      <% @articles.each do |article| %>
        <li><h3><%= link_to article.title, article_path(article) %></h3>
        <p><%= article.content %></p></li>
      <% end %>
    </ul>
  <% end %>
</div>
