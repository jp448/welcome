                  <img src="https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" class="sm-img">
                </div>
                <div>
                  <img src="https://images.unsplash.com/photo-1477118476589-bff2c5c4cfbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=60" class="sm-img">
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
              <button class="c-btn"><%= link_to "Find your mentor", mentors_path %></button>
            </div>
          </div>
        </div>
      </div>
  </div>
  <div class="d-flex justify-content-end m-5">
  <%= link_to "Add a new article", new_article_path, class: "c-btn" %>
